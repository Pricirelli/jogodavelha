<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_jogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_placarJogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txt_jogador1"
        app:layout_constraintLeft_toLeftOf="@id/txt_jogador1"
        app:layout_constraintRight_toRightOf="@id/txt_jogador1"/>

    <TextView
        android:id="@+id/txt_jogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 2"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_placarJogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txt_jogador2"
        app:layout_constraintLeft_toLeftOf="@id/txt_jogador2"
        app:layout_constraintRight_toRightOf="@id/txt_jogador2"/>

    <TextView
        android:id="@+id/txt_statusJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status do Jogo"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/txt_placarJogador1"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_statusJogo"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_statusJogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_statusJogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="207dp" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="207dp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="207dp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btn_reiniciarJogo"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="Reiniciar o Jogo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="473dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
